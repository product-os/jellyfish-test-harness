{
  "name": "@balena/jellyfish-test-harness",
  "version": "2.0.29",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-test-harness.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Test harness helpers for Jellyfish repos",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint-fix",
      "git add ."
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint --typescript lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest",
    "lint-fix": "balena-lint --typescript --fix lib",
    "unit": "jest",
    "test": "catch-uncommitted --skip-node-versionbot-changes && npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-core": "^2.13.2",
    "@balena/jellyfish-environment": "^4.1.4",
    "@balena/jellyfish-plugin-base": "^2.1.8",
    "@balena/jellyfish-queue": "0.0.575",
    "@balena/jellyfish-sync": "^6.0.46",
    "@balena/jellyfish-worker": "^4.1.5",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "errio": "^1.2.2",
    "express": "^4.17.1",
    "js-combinatorics": "^1.4.5",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nock": "^13.0.11",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-types": "^0.5.40",
    "@balena/lint": "^5.4.1",
    "@types/bluebird": "^3.5.33",
    "@types/jest": "^26.0.22",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.41",
    "catch-uncommitted": "^1.6.2",
    "depcheck": "^1.4.0",
    "deplint": "^1.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.3.1",
    "ts-jest": "^26.5.5",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
