{
  "name": "@balena/jellyfish-test-harness",
  "version": "1.1.9",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-test-harness.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Test harness helpers for Jellyfish repos",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{js}"
    ],
    "modules": [
      "lib"
    ]
  },
  "scripts": {
    "test": "npm run doc && catch-uncommitted --skip-node-versionbot-changes && make lint && make test",
    "doc": "jsdoc2md --template doc/README.hbs lib/index.js > README.md",
    "postinstall": "if [ -z \"$CI\" ] && [ -d \".git\" ]; then husky install; fi"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-core": "^2.9.4",
    "@balena/jellyfish-environment": "^2.4.24",
    "@balena/jellyfish-plugin-base": "^1.2.30",
    "@balena/jellyfish-queue": "0.0.467",
    "@balena/jellyfish-sync": "^5.2.7",
    "@balena/jellyfish-uuid": "^1.0.71",
    "@balena/jellyfish-worker": "^3.1.13",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "errio": "^1.2.2",
    "express": "^4.17.1",
    "js-combinatorics": "^1.4.5",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nock": "^13.0.11",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "ava": "^3.15.0",
    "catch-uncommitted": "^1.6.2",
    "depcheck": "^1.4.0",
    "deplint": "^1.1.3",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.2.0",
    "eslint-plugin-lodash": "^7.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.1.3",
    "jsdoc-to-markdown": "^7.0.0",
    "lint-staged": "^10.5.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "npm run doc",
      "git add README.md"
    ]
  }
}
