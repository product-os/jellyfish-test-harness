{
  "name": "@balena/jellyfish-test-harness",
  "version": "4.0.16",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-test-harness.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Test harness helpers for Jellyfish repos",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest",
    "lint-fix": "balena-lint --fix lib",
    "unit": "jest",
    "test": "npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-core": "^4.0.8",
    "@balena/jellyfish-environment": "^4.3.2",
    "@balena/jellyfish-plugin-base": "^2.1.165",
    "@balena/jellyfish-queue": "^1.0.182",
    "@balena/jellyfish-sync": "^6.0.260",
    "@balena/jellyfish-worker": "^6.0.4",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "errio": "^1.2.2",
    "express": "^4.17.1",
    "js-combinatorics": "^1.4.5",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nock": "^13.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-config": "^1.3.3",
    "@balena/jellyfish-types": "^0.7.0",
    "@balena/lint": "^6.1.1",
    "@types/bluebird": "^3.5.35",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.17.3",
    "@types/uuid": "^8.3.0",
    "depcheck": "^1.4.1",
    "deplint": "^1.1.3",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.4.1",
    "ts-jest": "^27.0.3",
    "typedoc": "^0.21.0",
    "typescript": "^4.3.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
